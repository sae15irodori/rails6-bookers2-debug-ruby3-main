<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td><!--画像表示-->
        <td><%= user.name %></td><!--名前の表示-->
        
        <% if logged_in? && current_user.id != user.id %><!--ログイン中かつログイン中ユーザーと違うユーザーと違うならば-->
          <% if current_user.following?(user) %><!--表示されてる人をフォロー済ならば-->
             <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :destroy %></td>
          <% else %>
              <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :post %></td>
          <% end %>
        <% end %>
        
        
         
        
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
