<h1>Follower Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
       <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td><!--画像表示-->
      <td><%= user.name %></td><!--名前の表示-->
      <td>フォロー数：<%= user.following.count %></td>
      <td>フォロワー数：<%= user.followers.count %></td>
      <td><%= link_to 'Show', user_path(user.id) %> </td>
    </tr>
      <% end %>
  </tbody>
</table>