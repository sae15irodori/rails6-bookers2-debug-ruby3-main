<table class="mb-4">
    <tbody>
        <% book.book_comments.each do |book_comment| %><!--インスタンス変数必要-->
      <tr>
        <td>
          <%= image_tag book_comment.user.get_profile_image, size:"100x100", class: "mr-2" %><br>
          <%= link_to book_comment.user.name, user_path(user.id) %><!--user.idインスタンス変数必要-->
        </td>
        <td>
          <%= book_comment.comment %>
        </td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to "destroy", book_book_comment_path(book,book_comment.id), method: :delete, class: "btn btn-danger ml-2" %>
          <% end %>
        </td>
      </tr>
        <% end %>
    </tbody>
</table>