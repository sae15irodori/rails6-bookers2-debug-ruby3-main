<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="6"></th>

    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
<!--いいねボタン-->
        <td id=<%="favorites_buttons_"+ book.id.to_s %>><!--favorites_buttons_に投稿データのidを付与する事で-->
            <%= render 'favorites/favoritesbtn', book: book %>
        </td>
        <td>
          コメント数:<%= book.book_comments.count %>
        </td>
       </tr>
    <% end %><!--each doのend-->
  </tbody>
</table>