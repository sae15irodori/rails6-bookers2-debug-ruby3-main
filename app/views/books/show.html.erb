<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_n %><!--@bookより変更-->
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
              <% end %><!--if終了-->

              <!--いいねしたのがｶﾚﾝﾄﾕｰｻﾞｰであれば-->
              <% if @book.favorited_by?(current_user) %><!--取得した投稿データと関連付けたfavoriteモデルのuser_idカラムにｶﾚﾝﾄﾕｰｻﾞｰのidがあれば-->
            <td>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  ❤ <%= @book.favorites.count %> いいね
                <% end %>
            </td>
                <% else %>
            <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  ♡<%= @book.favorites.count %>いいね
                <% end %>
            </td>
              <% end %><!--if終了-->
            
            <td>
              コメント件数: <%= @book.book_comments.count %><!--bookはコメント複数保有するからcomments複数形-->
            </td>
        </tr>
        <tr>
            <% @book.book_comments.each do |book_comment| %>
          <td> 
              <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
              <%= link_to book_comment.user.name, user_path(@user.id) %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
            <% end %>
        </tr>
        
        <tr>
          <td>
            <%= form_with model: [@book, @book_comment] do |f| %>
              <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに" %>
              <%= f.submit "送信" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>